<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MMTAdmobSample.AdSelection">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="MTAdmob" HorizontalTextAlignment="Center" Padding="20" FontSize="30"/>
            <Image Source="mtadmob" HorizontalOptions="Center" HeightRequest="100"/>
            <StackLayout VerticalOptions="CenterAndExpand" Spacing="25" Margin="20">
                <Button Text="Admob" Clicked="AdMobButton"/>
                <Button Text="Ad Manager" Clicked="AdManagerButton"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>